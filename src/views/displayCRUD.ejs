<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <link rel="stylesheet" href="../../public/css/allUser.scss">
</head>

<body>
    <h2>Bảng Đẹp</h2>
    <table action="/" method="get">
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Gender</th>
            <th>RoleId</th>
            <th>Action</th>
        </tr>
        <% listUsers.forEach(function(User) { %>
            <tr>
                <td>
                    <%= User.id %>
                </td>
                <td>
                    <%= User.email %>
                </td>
                <td>
                    <%= User.password %>
                </td>
                <td>
                    <%= User.firstName %>
                </td>
                <td>
                    <%= User.lastName %>
                </td>
                <td>
                    <%= User.phonenumber %>
                </td>
                <td>
                    <%= User.gender %>
                </td>
                <td>
                    <%= User.roleId %>
                </td>
                <td>
                    <a href="/edit-User/<%= User.id %>"><i class="fa-regular fa-pen-to-square"></i></a>
                    <a href="/delete-User/<%= User.id %>"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
            <% }); %>
    </table>
</body>

</html>